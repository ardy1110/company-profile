generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model user {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OrgEmployee {
  id         String        @id @default(uuid())
  name       String
  position   String
  department String?
  level      Int
  parentId   String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  parent     OrgEmployee?  @relation("EmployeeParent", fields: [parentId], references: [id])
  children   OrgEmployee[] @relation("EmployeeParent")
}

model Project {
  id        String   @id @default(uuid())
  name      String
  field     String
  client    String
  year      Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Certificate {
  id        String   @id @default(uuid())
  title     String
  imageUrl  String
  altText   String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
